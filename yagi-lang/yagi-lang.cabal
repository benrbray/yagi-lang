build-type:          Simple

library
  hs-source-dirs:  src
  build-depends:
    base >=4.14 && <4.15  ,
    containers            ,
    extra                 ,
    mtl                   ,
    megaparsec            ,
    parser-combinators    ,
    text
  default-language:    Haskell2010
