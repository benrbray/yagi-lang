    Yagi.Lang,
    Yagi.ParserNew,
    Util.PrettyPrint,
    TextSpan,
  other-modules:
    Yagi.Parser,
    Yagi.RecursionSchemes,
    PrettyPrint,
    Example.RecursionSchemes,
    ExprF

executable yagi
  hs-source-dirs:  yagi
  main-is:         Main.hs
  build-depends:
    base >=4.14 && <4.15  ,
    containers            ,
    extra                 ,
    mtl                   ,
    megaparsec            ,
    parser-combinators    ,
    text                  ,
    yagi-lang
  default-language:    Haskell2010

executable test
  hs-source-dirs:  yagi
  main-is:         Test.hs
  ghc-options:     -main-is Test
  build-depends:
    base >=4.14 && <4.15  ,
    containers            ,
    extra                 ,
    mtl                   ,
    megaparsec            ,
    parser-combinators    ,
    text                  ,
    yagi-lang
