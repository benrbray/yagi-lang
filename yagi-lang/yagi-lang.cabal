build-type:          Simple
extra-source-files:  CHANGELOG.md

common common
  build-depends:
    base >=4.14 && <4.15  ,
    containers            ,
    extra                 ,
    mtl                   ,
    megaparsec            ,
    parser-combinators    ,
    text                  ,
  default-language:    Haskell2010
  ghc-options: -Wall

executable yagi-lang
  import:          common
  hs-source-dirs:  src
  main-is:         Main.hs
  other-modules:
    Parser,
    TextSpan,
    YagiLang,
    PrettyPrint,
    RecursionSchemes,
    ExprF

executable parser
  import:              common
  hs-source-dirs:      src
  main-is:             Parser.hs
  ghc-options: -main-is Parser
  other-modules:
    TextSpan,
    YagiLang,
    PrettyPrint,
    ExprF
  default-language:    Haskell2010

executable textspan
  hs-source-dirs:      src
  main-is:             TextSpan.hs
  ghc-options: -main-is TextSpan
  other-modules:
    YagiLang,
    PrettyPrint
  -- other-extensions:
  build-depends:
    base >=4.14 && <4.15,
    text,
    mtl,
    containers,
    megaparsec,
    parser-combinators,
    extra
  -- hs-source-dirs:
  default-language:    Haskell2010

executable lexerexample
  hs-source-dirs:      src
  main-is:             LexerExample.hs
  ghc-options: -main-is LexerExample
  other-modules: ParseUrls
  -- other-extensions:
  build-depends:
    base >=4.14 && <4.15,
    text,
    mtl,
    containers,
    megaparsec,
    parser-combinators
  -- hs-source-dirs:
  default-language:    Haskell2010
